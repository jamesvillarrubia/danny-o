{
  "name": "todoist-ai-agent",
  "version": "2.0.0",
  "description": "AI-powered task management agent for Todoist with intelligent categorization, prioritization, and time estimation - NestJS TypeScript Edition",
  "main": "dist/main.js",
  "bin": {
    "danny": "./bin/danny"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "tsx src/main.ts",
    "start:dev": "tsx watch src/main.ts",
    "start:debug": "node --inspect --loader tsx src/main.ts",
    "start:prod": "node dist/main",
    "start:http": "RUN_MODE=http tsx src/main.ts",
    "start:http:mock": "RUN_MODE=http USE_MOCKS=true tsx src/main.ts",
    "cli": "tsx src/main.ts",
    "mcp": "RUN_MODE=mcp tsx src/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run --config ./test/vitest-e2e.config.ts",
    "test:integration": "vitest run --config ./test/vitest.integration.config.ts",
    "test:step-ci": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit && docker-compose -f docker-compose.test.yml down",
    "test:step-ci:mock": "pnpm build && RUN_MODE=http USE_MOCKS=true DATABASE_URL= PGLITE_PATH=./data/test.db node dist/main.js & sleep 5 && npx stepci run step-ci/workflows/blueprint/health.yaml && npx stepci run step-ci/workflows/blueprint/tasks.yaml; pkill -f 'node dist/main.js' || true",
    "test:step-ci:real": "pnpm build && RUN_MODE=http node dist/main.js & sleep 5 && npx stepci run step-ci/step-ci.yaml --env step-ci/environments/real.yaml; pkill -f 'node dist/main.js' || true",
    "test:step-ci:record": "tsx scripts/record-fixtures.ts",
    "migrate": "tsx src/storage/migrate.ts"
  },
  "keywords": [
    "todoist",
    "ai",
    "task-management",
    "productivity",
    "mcp",
    "nestjs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@danny-tasks/shared": "workspace:*",
    "@anthropic-ai/sdk": "latest",
    "@doist/todoist-ai": "latest",
    "@doist/todoist-api-typescript": "latest",
    "@doist/todoist-quickadd": "latest",
    "@modelcontextprotocol/sdk": "latest",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/terminus": "^10.3.0",
    "@sentry/nestjs": "^10.28.0",
    "@sentry/node": "^10.28.0",
    "@electric-sql/pglite": "latest",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "latest",
    "express": "^5.2.1",
    "kysely": "^0.28.8",
    "nest-commander": "^3.12.0",
    "pg": "latest",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/nock": "^11.1.0",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nock": "^14.0.10",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
