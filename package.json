{
  "name": "danny-tasks",
  "version": "2.0.0",
  "private": true,
  "description": "AI-powered task management system - monorepo root",
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"pnpm --filter ./api start:http\" \"pnpm --filter ./web dev\"",
    "dev:api": "pnpm --filter ./api start:http",
    "dev:web": "pnpm --filter ./web dev",
    "dev:docs": "pnpm --filter ./docs start",
    "build": "pnpm --filter ./packages/shared build && pnpm --filter ./api build && pnpm --filter ./web build",
    "build:shared": "pnpm --filter ./packages/shared build",
    "build:api": "pnpm --filter ./api build",
    "build:web": "pnpm --filter ./web build",
    "build:docs": "pnpm --filter ./docs build",
    "install:all": "pnpm install && pnpm --filter ./packages/shared install && pnpm --filter ./api install && pnpm --filter ./web install && pnpm --filter ./docs install",
    "test": "pnpm --filter ./api test && pnpm --filter ./web lint",
    "test:api": "pnpm --filter ./api test",
    "lint": "pnpm --filter ./api lint && pnpm --filter ./web lint",
    "lint:api": "pnpm --filter ./api lint",
    "lint:web": "pnpm --filter ./web lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
