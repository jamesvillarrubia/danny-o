{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "buildCommand": "cd web && if [ \"$VERCEL_ENV\" = \"preview\" ]; then VITE_API_URL=https://danny-tasks-api-dev.fly.dev pnpm build; else pnpm build; fi",
  "installCommand": "cd web && pnpm install",
  "outputDirectory": "web/dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

